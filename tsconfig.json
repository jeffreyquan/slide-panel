{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true
  },
  "include": [
    "src/*.ts", "src/types/index.d.ts"  ],
  "exclude": [
    "node_modules"
  ]
}